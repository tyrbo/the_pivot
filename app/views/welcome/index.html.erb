
<!--Video Section-->
<section class="content-section video-section" style="margin-left: -15px; margin-right: -15px">
  <div class="pattern-overlay">
    <a id="bgndVideo" class="player" data-property="{videoURL:'https://www.youtube.com/watch?v=y9UMODgsIUM',containment:'.video-section', quality:'large', autoPlay:true, mute:true, opacity:1}">bg</a>
    <div class="row">
      <div class="col-lg-12">
        <h1>Airlift</h1>
        <h3>Getting supplies to the people who need them.</h3>
        <p id='item-button'><%= link_to 'See All Items', items_path, class: "btn btn-default btn-lg" %>
      </div>
    </div>
  </div>
</section>


<div class="row">
  <div class="col-md-12">
    <div id="featured-supplier-header"><h1>Featured Suppliers</h1></div>
  </div>
</div>

<div class="row">
  <% @featured.each do |supplier| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <%= link_to supplier_path(supplier.supplier) do %><%= image_tag supplier.supplier.picture.url(:medium), :class => "img-rounded" %><% end %>
        <div class="caption text-center">
          <h3><%= link_to supplier.supplier.name, supplier.supplier %></h3>
          <p><%= supplier.supplier.description %></p>
          <div class='row'>
            <% supplier.supplier.items[0..2].each do |item| %>
              <%= link_to item_path(item) do %><%= image_tag item.picture.url(:thumb), :class => "img-rounded-thumb", id: "feature-thumb" %><% end %>
            <% end %>
          </div>
              <br />
              <%= link_to 'View All', supplier_path(supplier.supplier) , :class => "btn btn-primary" %>

        </div>

      </div>
    </div>
  <% end %>
</div>

